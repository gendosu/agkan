{
  "name": "agkan",
  "version": "1.3.2",
  "description": "TypeScript-based CLI task management tool with SQLite storage",
  "main": "dist/cli/index.js",
  "bin": {
    "agkan": "bin/agkan"
  },
  "files": [
    "dist",
    "bin"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/cli/index.js",
    "test": "vitest",
    "test:all": "npm run type-check && npm run lint && vitest run && npm run test:e2e",
    "test:errors": "vitest run --reporter=./tests/reporters/error-only.ts",
    "test:e2e": "./test-e2e.sh",
    "lint": "eslint src tests --ext .ts",
    "lint:fix": "eslint src tests --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "type-check": "tsc --noEmit",
    "check": "npm run type-check && npm run lint && npm run format:check",
    "prepublishOnly": "npm run check && npm run build && vitest run",
    "prepare": "husky || true"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gendosu/agkan.git"
  },
  "bugs": {
    "url": "https://github.com/gendosu/agkan/issues"
  },
  "homepage": "https://github.com/gendosu/agkan#readme",
  "keywords": [
    "cli",
    "task-management",
    "kanban",
    "typescript",
    "sqlite"
  ],
  "author": "gendosu <gendosu@gmail.com>",
  "license": "ISC",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "better-sqlite3": "^11.7.0",
    "chalk": "^4.1.2",
    "commander": "^12.1.0",
    "js-yaml": "^4.1.1"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.10.5",
    "@typescript-eslint/eslint-plugin": "^8.55.0",
    "@typescript-eslint/parser": "^8.55.0",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.2",
    "prettier": "^3.8.1",
    "typescript": "^5.7.3",
    "vitest": "^4.0.18"
  }
}
